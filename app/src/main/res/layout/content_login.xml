<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.buddhikajay.mobilepay.loginActivity"
    tools:showIn="@layout/activity_login"
    android:background="#ffffff">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/logo"
        android:src="@drawable/logo_wide"
        android:layout_alignRight="@+id/login_pin"
        android:layout_alignEnd="@+id/login_pin" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/accountNo"
        android:text=""
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:cursorVisible="true"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textCursorDrawable="@color/colorPrimary"
        android:textColor="@color/colorAccent"
        android:focusable="true"
        android:layout_below="@+id/logo"
        android:layout_marginTop="10dp"
        android:hint="Account Number"
        />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/login_pin"
        android:text=""
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:cursorVisible="true"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textCursorDrawable="@color/colorPrimary"
        android:textColor="@color/colorAccent"
        android:focusable="true"
        android:layout_below="@+id/accountNo"
        android:layout_marginTop="10dp"
        />




    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:id="@+id/log_button"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/login_pin"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:focusable="true"
        />
    <TextView android:id="@+id/link_signup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_below="@+id/log_button"
        android:text="register"
        android:gravity="center"
        android:textSize="16dip"/>

</RelativeLayout>
