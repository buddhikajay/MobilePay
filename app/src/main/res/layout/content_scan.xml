<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.buddhikajay.mobilepay.UserTransactionReportActivity"
    tools:showIn="@layout/activity_scan">

    <!--ListView
        android:id="@+id/sacanList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

    </ListView-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_merchant_pay"
                android:layout_width="157dp"
                android:layout_height="157dp"
                android:layout_gravity="left"
                android:layout_marginRight="8dp"

                android:background="@drawable/btn_merchant_pay" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_fund_transfer"
                android:layout_width="157dp"
                android:layout_height="157dp"
                android:layout_gravity="right"
                android:layout_marginLeft="8dp"
                android:background="@drawable/btn_fund_transfer" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1.22"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_my_qr"
                android:layout_width="157dp"
                android:layout_height="157dp"
                android:layout_gravity="left"
                android:layout_marginRight="8dp"
                android:background="@drawable/btn_my_qr" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_transaction_report"
                android:layout_width="157dp"
                android:layout_height="157dp"
                android:layout_gravity="right"
                android:layout_marginLeft="8dp"
                android:background="@drawable/btn_transaction_reports" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
